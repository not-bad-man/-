/* pages/wallet/wallet.wxss */
.contain{
  height: 100vh;
  width: 100%;
  background-color: #ccc;
}
.restMoney{
  height: 30%;
  background-color: white;
  padding: 40rpx 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
}
.restMoney .restText{

}
.restMoney .number{
  font-size: 200rpx;
  flex: 1;
  font-weight: bolder;
}
.restMoney .restExplain{
  border: 1rpx solid black;
  border-radius: 30rpx;
  width: 200rpx;
  text-align: center;
  margin: 0 auto;
  height: 40rpx;
  line-height: 40rpx; 
}
.balance{
  padding: 30rpx;
}
.my{
  font-size: 30rpx;
  line-height: 60rpx;
  background-color: white;
  width: 100%;
}
.my .car-card,
.my .deposit{
  border-bottom: 2rpx solid #f2f2f2; 
  height: 60rpx;
  padding: 30rpx;
  position: relative;
}
.my .car-card text:nth-child(2),
.my .deposit .right{
  float: right;
}
.my .deposit .right .depositRet{
  color: aquamarine;
}
.about{
  margin-top: 30rpx;
  background-color: white;
  padding: 30rpx;
  font-size: 30rpx;
  position: relative;
}
.about .dir{
  float: right;  
}
